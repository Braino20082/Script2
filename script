-- Beispiel: ServerScript in ServerScriptService
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local event = ReplicatedStorage:WaitForChild("Events") -- oder dein Eventname

event.OnServerEvent:Connect(function(player, args)
    print(player.Name .. " hat das Event gestartet mit:", args)
    -- Hier passiert dann dein Server-Code
end)
