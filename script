-- üìå Alles in einem Script (Clientseitig, nur f√ºr dich sichtbar!)
-- Tools m√ºssen in ReplicatedStorage > ToolsFolder liegen

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local replicatedStorage = game:GetService("ReplicatedStorage")
local toolsFolder = replicatedStorage:WaitForChild("ToolsFolder")

-- GUI erstellen
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ToolsGui"
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 250, 0, 150)
mainFrame.Position = UDim2.new(0.5, -125, 0.5, -75)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Titel
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.Text = "Tools Men√º"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = mainFrame

-- Schlie√üen-Button (X)
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -30, 0, 0)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 18
closeButton.Parent = mainFrame

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Tools erhalten Button
local getToolsButton = Instance.new("TextButton")
getToolsButton.Size = UDim2.new(0.8, 0, 0, 50)
getToolsButton.Position = UDim2.new(0.1, 0, 0.5, -25)
getToolsButton.Text = "üì¶ Tools erhalten"
getToolsButton.TextColor3 = Color3.fromRGB(255, 255, 255)
getToolsButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
getToolsButton.Font = Enum.Font.GothamBold
getToolsButton.TextSize = 22
getToolsButton.Parent = mainFrame

-- Tools geben
getToolsButton.MouseButton1Click:Connect(function()
    local backpack = player:WaitForChild("Backpack")

    for _, tool in pairs(toolsFolder:GetChildren()) do
        if tool:IsA("Tool") then
            local clone = tool:Clone()
            clone.Parent = backpack
        end
    end

    -- Optional: erstes Tool sofort ausr√ºsten
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:WaitForChild("Humanoid")
    local firstTool = backpack:FindFirstChildWhichIsA("Tool")
    if firstTool then
        humanoid:EquipTool(firstTool)
    end
end)
