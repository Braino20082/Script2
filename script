-- ServerScriptService/GetServerTools.lua
-- Ein Button: klick = alle Tools auf dem Server bekommen (im Workspace oder ServerStorage)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ServerStorage = game:GetService("ServerStorage")
local Workspace = game:GetService("Workspace")

-- RemoteEvent erstellen
local ToolRequest = ReplicatedStorage:FindFirstChild("ToolRequest")
if not ToolRequest then
    ToolRequest = Instance.new("RemoteEvent")
    ToolRequest.Name = "ToolRequest"
    ToolRequest.Parent = ReplicatedStorage
end

-- Funktion: alle Tools auf Server finden und an Spieler geben
local function giveAllServerTools(player)
    local backpack = player:FindFirstChildOfClass("Backpack")
    if not backpack then return end

    -- Durch Workspace und ServerStorage suchen
    local containers = {Workspace, ServerStorage}
    for _, container in pairs(containers) do
        for _, obj in pairs(container:GetDescendants()) do
            if obj:IsA("Tool") then
                local existing = backpack:FindFirstChild(obj.Name)
                if existing then existing:Destroy() end
                obj:Clone().Parent = backpack
            end
        end
    end
end

-- RemoteEvent empfangen
ToolRequest.OnServerEvent:Connect(function(player)
    giveAllServerTools(player)
end)

-- LocalScript GUI-Code für den Spieler
local localScriptSource = 
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = game.Players.LocalPlayer
local ToolRequest = ReplicatedStorage:WaitForChild("ToolRequest")

-- ScreenGui erstellen
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "GetServerToolsGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Button direkt im ScreenGui, zentriert
local btn = Instance.new("TextButton")
btn.Size = UDim2.new(0, 220, 0, 60)
btn.AnchorPoint = Vector2.new(0.5, 0.5)
btn.Position = UDim2.new(0.5, 0, 0.5, 0)
btn.Text = "Alle Server-Tools holen"
btn.Font = Enum.Font.GothamBold
btn.TextSize = 20
btn.TextColor3 = Color3.fromRGB(255,255,255)
btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
btn.BorderSizePixel = 0
btn.Parent = screenGui

-- Hover-Effekt
btn.MouseEnter:Connect(function()
    btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
end)
btn.MouseLeave:Connect(function()
    btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
end)

-- Klick-Event: RemoteEvent feuern
btn.MouseButton1Click:Connect(function()
    ToolRequest:FireServer()
end)


-- Funktion: LocalScript an Spieler deployen
local function deployLocalScript(player)
    local pg = player:WaitForChild("PlayerGui")
    if pg:FindFirstChild("GetServerToolsGUI") then pg.GetServerToolsGUI:Destroy() end
    local ls = Instance.new("LocalScript")
    ls.Name = "GetServerToolsClient"
    ls.Source = localScriptSource
    ls.Parent = pg
end

-- Spieler joinet
Players.PlayerAdded:Connect(function(player)
    deployLocalScript(player)
end)

-- Bereits im Spiel
for _, p in pairs(Players:GetPlayers()) do
    deployLocalScript(p)
end

print("GetServerTools Script läuft – ein Klick = alle Tools im Server!")
