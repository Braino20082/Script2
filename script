-- Such-Eingabefeld
local searchFrame = Instance.new("Frame")
searchFrame.Name = "SearchFrame"
searchFrame.Size = UDim2.new(1, -20, 0, 40)
searchFrame.Position = UDim2.new(0, 10, 1, -50)
searchFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
searchFrame.BorderSizePixel = 0
searchFrame.Parent = mainFrame

local searchCorner = Instance.new("UICorner")
searchCorner.CornerRadius = UDim.new(0, 8)
searchCorner.Parent = searchFrame

local searchBox = Instance.new("TextBox")
searchBox.Name = "SearchBox"
searchBox.Size = UDim2.new(1, -20, 1, 0)
searchBox.Position = UDim2.new(0, 10, 0, 0)
searchBox.BackgroundTransparency = 1
searchBox.Text = ""
searchBox.PlaceholderText = "üîç Tool suchen..."
searchBox.TextColor3 = Color3.fromRGB(255, 255, 255)
searchBox.PlaceholderColor3 = Color3.fromRGB(150, 150, 150)
searchBox.TextScaled = true
searchBox.Font = Enum.Font.Gotham
searchBox.Parent = searchFrame

-- Globale Variablen
local foundTools = {}
local toolButtons = {}

-- Funktion zum rekursiven Suchen nach Tools
local function findToolsInContainer(container, containerName)
    local tools = {}
    
    local function searchRecursive(obj)
        if obj:IsA("Tool") then
            table.insert(tools, {
                tool = obj,
                path = containerName,
                name = obj.Name
            })
        end
        
        for _, child in pairs(obj:GetChildren()) do
            searchRecursive(child)
        end
    end
    
    searchRecursive(container)
    return tools
end

-- Funktion zum Scannen aller Tools im Spiel
local function scanForTools()
    foundTools = {}
    statusLabel.Text = "Scanne nach Tools..."
    
    -- L√∂sche alle alten Buttons
    for _, button in pairs(toolButtons) do
        if button and button.Parent then
            button:Destroy()
        end
    end
    toolButtons = {}
    
    wait(0.1) -- Kurze Pause f√ºr UI-Update
    
    -- Scanne verschiedene Services
    local containersToScan = {
        {container = ReplicatedStorage, name = "ReplicatedStorage"},
        {container = Lighting, name = "Lighting"},
        {container = Workspace, name = "Workspace"}
    }
    
    -- Versuche auch ServerStorage (funktioniert nur mit entsprechenden Rechten)
    pcall(function()
        table.insert(containersToScan, {container = ServerStorage, name = "ServerStorage"})
    end)
    
    -- Scanne alle Container
    for _, containerData in pairs(containersToScan) do
        local tools = findToolsInContainer(containerData.container, containerData.name)
        for _, toolData in pairs(tools) do
            -- Verhindere Duplikate
            local isDuplicate = false
            for _, existingTool in pairs(foundTools) do
                if existingTool.name == toolData.name and existingTool.path == toolData.path then
                    isDuplicate = true
                    break
                end
            end
            
            if not isDuplicate then
                table.insert(foundTools, toolData)
            end
        end
    end
    
    -- Sortiere Tools nach Namen
    table.sort(foundTools, function(a, b)
        return a.name < b.name
    end)
    
    -- Update Status
    if #foundTools == 0 then
        statusLabel.Text = "‚ùå Keine Tools gefunden"
        statusLabel.TextColor3 = Color3.fromRGB(255, 85, 85)
    else
        statusLabel.Text = "‚úÖ " .. #foundTools .. " Tools gefunden"
        statusLabel.TextColor3 = Color3.fromRGB(85, 255, 85)
    end
    
    -- Erstelle Buttons f√ºr gefundene Tools
    createToolButtons()
end

-- Funktion zum Erstellen eines Tool-Buttons
local function createToolButton(toolData)
    local toolButton = Instance.new("TextButton")
    toolButton.Name = toolData.name .. "Button"
    toolButton.Size = UDim2.new(1, 0, 0, 50)
    toolButton.BackgroundColor3 = Color3.fromRGB(55, 55, 65)
    toolButton.BorderSizePixel = 0
    toolButton.Parent = scrollFrame
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = toolButton
    
    -- Tool Name Label
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Name = "NameLabel"
    nameLabel.Size = UDim2.new(1, -60, 0.6, 0)
    nameLabel.Position = UDim2.new(0, 10, 0, 0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = "üîß " .. toolData.name
    nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.TextScaled = true
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.Parent = toolButton
    
    -- Path Label
    local pathLabel = Instance.new("TextLabel")
    pathLabel.Name = "PathLabel"
    pathLabel.Size = UDim2.new(1, -60, 0.4, 0)
    pathLabel.Position = UDim2.new(0, 10, 0.6, 0)
    pathLabel.BackgroundTransparency = 1
    pathLabel.Text = "üìÅ " .. toolData.path
    pathLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    pathLabel.TextXAlignment = Enum.TextXAlignment.Left
    pathLabel.TextScaled = true
    pathLabel.Font = Enum.Font.Gotham
    pathLabel.Parent = toolButton
    
    -- Get Button
    local getButton = Instance.new("TextButton")
    getButton.Name = "GetButton"
    getButton.Size = UDim2.new(0, 45, 0, 30)
    getButton.Position = UDim2.new(1, -55, 0.5, -15)
    getButton.BackgroundColor3 = Color3.fromRGB(65, 105, 255)
    getButton.Text = "GET"
    getButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    getButton.TextScaled = true
    getButton.Font = Enum.Font.GothamBold
    getButton.BorderSizePixel = 0
    getButton.Parent = toolButton
    
    local getCorner = Instance.new("UICorner")
    getCorner.CornerRadius = UDim.new(0, 6)
    getCorner.Parent = getButton
    
    -- Hover-Effekte
    local originalColor = toolButton.BackgroundColor3
    
    toolButton.MouseEnter:Connect(function()
        local tween = TweenService:Create(toolButton, 
            TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
            {BackgroundColor3 = Color3.fromRGB(65, 65, 75)}
        )
        tween:Play()
    end)
    
    toolButton.MouseLeave:Connect(function()
        local tween = TweenService:Create(toolButton, 
            TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
            {BackgroundColor3 = originalColor}
        )
        tween:Play()
    end)
    
    -- Get Button Hover
    getButton.MouseEnter:Connect(function()
        local tween = TweenService:Create(getButton, 
            TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
            {BackgroundColor3 = Color3.fromRGB(85, 125, 255)}
        )
        tween:Play()
    end)
    
    getButton.MouseLeave:Connect(function()
        local tween = TweenService:Create(getButton, 
            TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
            {BackgroundColor3 = Color3.fromRGB(65, 105, 255)}
        )
        tween:Play()
    end)
    
    -- Tool geben Funktion
    local function giveTool()
        pcall(function()
            local clonedTool = toolData.tool:Clone()
            clonedTool.Parent = player.Backpack
            
            -- Erfolgs-Animation
            getButton.Text = "‚úì"
            getButton.BackgroundColor3 = Color3.fromRGB(85, 255, 85)
            
            wait(1)
            
            getButton.Text = "GET"
            getButton.BackgroundColor3 = Color3.fromRGB(65, 105, 255)
            
            print("Tool erhalten: " .. toolData.name .. " von " .. toolData.path)
        end)
    end
    
    getButton.MouseButton1Click:Connect(giveTool)
    toolButton.MouseButton1Click:Connect(giveTool)
    
    return toolButton
end

-- Funktion zum Erstellen aller Tool-Buttons
function createToolButtons()
    for _, toolData in pairs(foundTools) do
        toolButtons[toolData.name] = createToolButton(toolData)
    end
    
    -- Canvas-Gr√∂√üe anpassen
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, #foundTools * 55 + 20)
end

-- Such-Funktion
searchBox.Changed:Connect(function()
    local searchText = searchBox.Text:lower()
    local visibleCount = 0
    
    for toolName, button in pairs(toolButtons) do
        if toolName:lower():find(searchText) or searchText == "" then
            button.Visible = true
            visibleCount = visibleCount + 1
        else
            button.Visible = false
        end
    end
    
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, visibleCount * 55 + 20)
end)

-- Button-Funktionen
refreshButton.MouseButton1Click:Connect(function()
    -- Dreh-Animation f√ºr Refresh-Button
    local tween = TweenService:Create(refreshButton, 
        TweenInfo.new(0.5, Enum.EasingStyle.Quad), 
        {Rotation = refreshButton.Rotation + 360}
    )
    tween:Play()
    
    scanForTools()
end)

closeButton.MouseButton1Click:Connect(function()
    local tween = TweenService:Create(mainFrame, 
        TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), 
        {Size = UDim2.new(0, 0, 0, 0), Position = UDim2.new(0.5, 0, 0.5, 0)}
    )
    tween:Play()
    
    tween.Completed:Connect(function()
        screenGui:Destroy()
    end)
end)

-- Dragging-Funktion
local dragToggle = nil
local dragStart = nil
local startPos = nil

local function updateInput(input)
    local delta = input.Position - dragStart
    local position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, 
                              startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    mainFrame.Position = position
end

titleBar.InputBegan:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseButton1 or 
        input.UserInputType == Enum.UserInputType.Touch) then
        dragToggle = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragToggle = false
            end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or 
       input.UserInputType == Enum.UserInputType.Touch then
        if dragToggle then
            updateInput(input)
        end
    end
end)

-- √ñffnungs-Animation
mainFrame.Size = UDim2.new(0, 0, 0, 0)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)

local openTween = TweenService:Create(mainFrame, 
    TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), 
    {Size = UDim2.new(0, 450, 0, 550), Position = UDim2.new(0.5, -225, 0.5, -275)}
)
openTween:Play()

-- Automatischer erster Scan
wait(0.5)
scanForTools()

print("Game Tool Giver GUI geladen!")
print("Das Script scannt automatisch nach allen verf√ºgbaren Tools im Spiel!")
