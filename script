-- StarterPlayerScripts/BrainrotClient.lua
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")
local Workspace = game:GetService("Workspace")

-- === GUI erstellen ===
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BrainrotGUI"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 140)
frame.Position = UDim2.new(0.5, -150, 0.05, 0)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0)
frame.ClipsDescendants = true
frame.Parent = screenGui

-- Icon
local icon = Instance.new("ImageLabel")
icon.Size = UDim2.new(0, 40, 0, 40)
icon.Position = UDim2.new(0, 10, 0, 10)
icon.BackgroundTransparency = 1
icon.Image = "rbxassetid://12846818277"
icon.Parent = frame

-- Titel
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -60, 0, 20)
title.Position = UDim2.new(0, 55, 0, 10)
title.Text = "Brainrot Status"
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.Parent = frame

-- Status Label
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, -60, 0, 20)
statusLabel.Position = UDim2.new(0, 55, 0, 40)
statusLabel.Text = "Bereit"
statusLabel.TextScaled = true
statusLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
statusLabel.BackgroundTransparency = 1
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.Parent = frame

-- ON/OFF Variablen
local stealBrainrot = false
local autoSteal = false
local debounce = false

-- Funktion um Status zu ändern
local function setStatus(text, color)
    statusLabel.Text = text
    if color then
        statusLabel.TextColor3 = color
    end
end

-- Button erstellen
local function createButton(name, posY, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 130, 0, 30)
    btn.Position = UDim2.new(0, 10 + posY*140, 0, 70)
    btn.Text = name .. ": OFF"
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextScaled = true
    btn.Parent = frame

    btn.MouseButton1Click:Connect(function()
        local state = callback()
        btn.Text = name .. ": " .. (state and "ON" or "OFF")
    end)
end

-- Buttons
createButton("Steal Brainrot", 0, function()
    stealBrainrot = not stealBrainrot
    return stealBrainrot
end)
createButton("Auto Steal", 1, function()
    autoSteal = not autoSteal
    return autoSteal
end)

-- Funktion um das nächste Brainrot zu finden
local function getClosestBrainrot()
    local closest = nil
    local dist = math.huge
    if not Workspace then return nil end
    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj.Name == "Brainrot" and obj:IsA("BasePart") then
            local d = (obj.Position - player.Character.HumanoidRootPart.Position).Magnitude
            if d < dist then
                dist = d
                closest = obj
            end
        end
    end
    return closest
end

-- Funktion um Brainrot zu „stehlen“
local function steal(brainrot)
    if not brainrot or not brainrot:IsA("BasePart") then return end
    if debounce then return end
    debounce = true
    setStatus("Stehlen...", Color3.fromRGB(255, 200, 50))
    wait(0.3)
    setStatus("Geflogen!", Color3.fromRGB(50, 255, 50))
    wait(0.5)
    setStatus("Bereit", Color3.fromRGB(200, 200, 255))
    debounce = false
end

-- Auto Steal Loop
spawn(function()
    while true do
        wait(0.2)
        if autoSteal then
            local brainrot = getClosestBrainrot()
            if brainrot then
                steal(brainrot)
            else
                setStatus("Kein Brainrot in Reichweite", Color3.fromRGB(255,100,100))
            end
        end
    end
end)

-- Optional: Manuelles Stehlen beim Berühren
local function monitorBrainrot(brainrot)
    if not brainrot:IsA("BasePart") then return end
    brainrot.Touched:Connect(function(hit)
        local char = hit.Parent
        if char and char:FindFirstChild("Humanoid") then
            local plr = Players:GetPlayerFromCharacter(char)
            if plr == player and stealBrainrot then
                steal(brainrot)
            end
        end
    end)
end

-- Alle vorhandenen Brainrot überwachen
for _, obj in ipairs(Workspace:GetDescendants()) do
    if obj.Name == "Brainrot" then
        monitorBrainrot(obj)
    end
end

-- Neue Brainrot automatisch überwachen
Workspace.DescendantAdded:Connect(function(obj)
    if obj.Name == "Brainrot" then
        monitorBrainrot(obj)
    end
end)
