-- Tool & GamePass GUI (LocalScript)
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ToolPassGUI"
ScreenGui.Parent = PlayerGui
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 280, 0, 160)
MainFrame.Position = UDim2.new(0.5,0,0.5,0)
MainFrame.AnchorPoint = Vector2.new(0.5,0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0.1,0)

-- Title
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1,-40,0,30)
Title.Position = UDim2.new(0,10,0,5)
Title.BackgroundTransparency = 1
Title.Text = "Tools & GamePass"
Title.TextColor3 = Color3.fromRGB(0,255,0)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Close Button
local CloseButton = Instance.new("TextButton", MainFrame)
CloseButton.Size = UDim2.new(0,28,0,28)
CloseButton.Position = UDim2.new(1,-36,0,5)
CloseButton.Text = "X"
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextColor3 = Color3.fromRGB(255,100,100)
CloseButton.BackgroundColor3 = Color3.fromRGB(35,35,35)
CloseButton.TextScaled = true
local closeCorner = Instance.new("UICorner", CloseButton)
closeCorner.CornerRadius = UDim.new(0.3,0)
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Buttons
local function makeButton(text, posY)
    local b = Instance.new("TextButton", MainFrame)
    b.Size = UDim2.new(0.9,0,0,38)
    b.Position = UDim2.new(0.05,0,posY,0)
    b.BackgroundColor3 = Color3.fromRGB(30,30,30)
    b.TextColor3 = Color3.fromRGB(0,255,0)
    b.Font = Enum.Font.GothamBold
    b.Text = text
    b.TextScaled = true
    local c = Instance.new("UICorner", b)
    c.CornerRadius = UDim.new(0.12,0)
    return b
end

local ToolButton = makeButton("Give & Equip All Tools",0.25)
local PassButton = makeButton("Give GamePass Tools",0.65)

-- ---------- Tool Logic ----------
local function equipTool(tool)
    if not tool then return end
    local backpack = LocalPlayer:FindFirstChild("Backpack") or Instance.new("Folder",LocalPlayer)
    backpack.Name = "Backpack"
    tool.Parent = backpack
    local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local humanoid = character:FindFirstChildOfClass("Humanoid") or character:WaitForChild("Humanoid")
    humanoid:EquipTool(tool)
end

ToolButton.MouseButton1Click:Connect(function()
    for _, item in pairs(ReplicatedStorage:GetDescendants()) do
        if item:IsA("Tool") then
            local clone = item:Clone()
            equipTool(clone)
        end
    end
    print("Alle Tools geklont & ausgerüstet!")
end)

-- ---------- GamePass Tools ----------
local GAMEPASS_NAMES = {"VIP","2x Geld","Admin"}
local function createSimTool(name)
    local tool = Instance.new("Tool")
    tool.Name = name
    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1,1,1)
    handle.CanCollide = false
    handle.Transparency = 0.3
    handle.Parent = tool

    -- Billboard für andere sichtbar
    local bg = Instance.new("BillboardGui", handle)
    bg.Size = UDim2.new(0,120,0,40)
    bg.AlwaysOnTop = true
    bg.StudsOffset = Vector3.new(0,1.5,0)
    local label = Instance.new("TextLabel", bg)
    label.Size = UDim2.new(1,0,1,0)
    label.BackgroundTransparency = 0.6
    label.BackgroundColor3 = Color3.fromRGB(20,20,20)
    label.TextColor3 = Color3.fromRGB(0,255,0)
    label.TextScaled = true
    label.Text = name
    return tool
end

PassButton.MouseButton1Click:Connect(function()
    for _, name in pairs(GAMEPASS_NAMES) do
        -- Versuche Tool/Accessory im ReplicatedStorage zu finden
        local asset = ReplicatedStorage:FindFirstChild(name)
        if asset and asset:IsA("Tool") then
            equipTool(asset:Clone())
        else
            equipTool(createSimTool(name))
        end
    end
    print("GamePass Tools simuliert & ausgerüstet!")
end)
