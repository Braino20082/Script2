-- Alle Tools automatisch geben und ausrüsten, sichtbar für andere
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ToolsFolder = ReplicatedStorage:WaitForChild("ToolsFolder") -- Ordner mit allen Tools

game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        local backpack = player:WaitForChild("Backpack")
        local humanoid = character:WaitForChild("Humanoid")

        -- Gib alle Tools aus dem ToolsFolder
        for _, tool in pairs(ToolsFolder:GetChildren()) do
            if tool:IsA("Tool") then
                local clone = tool:Clone()
                clone.Parent = backpack
            end
        end

        -- Rüste das erste Tool sofort aus (sichtbar in der Hand)
        task.wait(1) -- kurze Wartezeit, bis Tools im Backpack sind
        local firstTool = backpack:FindFirstChildWhichIsA("Tool")
        if firstTool then
            humanoid:EquipTool(firstTool)
        end
    end)
end)
