-- LocalScript in StarterGui
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

-- GUI erstellen
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "TurtleGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Schildkr√∂ten Intro
local TurtleFolder = Instance.new("Folder")
TurtleFolder.Name = "Turtles"
TurtleFolder.Parent = ScreenGui

for i = 1, 5 do
    local Turtle = Instance.new("TextLabel")
    Turtle.Size = UDim2.new(0,120,0,120)
    Turtle.Position = UDim2.new(0,-120,0,0.1*i)
    Turtle.BackgroundTransparency = 1
    Turtle.Text = "üê¢"
    Turtle.TextScaled = true
    Turtle.Parent = TurtleFolder
    TweenService:Create(Turtle, TweenInfo.new(10, Enum.EasingStyle.Linear), {Position = UDim2.new(0.5,-60,0.1*i,0)}):Play()
end
for i = 1, 5 do
    local Turtle = Instance.new("TextLabel")
    Turtle.Size = UDim2.new(0,120,0,120)
    Turtle.Position = UDim2.new(1,120,0,0.1*i)
    Turtle.BackgroundTransparency = 1
    Turtle.Text = "üê¢"
    Turtle.TextScaled = true
    Turtle.Parent = TurtleFolder
    TweenService:Create(Turtle, TweenInfo.new(10, Enum.EasingStyle.Linear), {Position = UDim2.new(0.5,-60,0.1*i,0)}):Play()
end

-- Hauptframe (erst unsichtbar)
local GuiFrame = Instance.new("Frame")
GuiFrame.Size = UDim2.new(0.7,0,0.7,0)
GuiFrame.Position = UDim2.new(0.15,0,0.15,0)
GuiFrame.BackgroundColor3 = Color3.fromRGB(50,100,200)
GuiFrame.Visible = false
GuiFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0,15)
UICorner.Parent = GuiFrame

-- X Button
local CloseBtn = Instance.new("TextButton")
CloseBtn.Size = UDim2.new(0,40,0,40)
CloseBtn.Position = UDim2.new(1,-50,0,10)
CloseBtn.Text = "X"
CloseBtn.TextColor3 = Color3.new(1,0,0)
CloseBtn.TextScaled = true
CloseBtn.BackgroundTransparency = 1
CloseBtn.Parent = GuiFrame
CloseBtn.MouseButton1Click:Connect(function()
    GuiFrame.Visible = false
end)

-- Sidebar
local Sidebar = Instance.new("Frame")
Sidebar.Size = UDim2.new(0.2,0,1,0)
Sidebar.BackgroundColor3 = Color3.fromRGB(40,40,80)
Sidebar.Parent = GuiFrame

local PlayerBtn = Instance.new("TextButton")
PlayerBtn.Size = UDim2.new(0.8,0,0,50)
PlayerBtn.Position = UDim2.new(0.1,0,0.05,0)
PlayerBtn.Text = "üë§ Player"
PlayerBtn.TextColor3 = Color3.new(1,1,1)
PlayerBtn.TextScaled = true
PlayerBtn.Parent = Sidebar

-- Content (rechts)
local Content = Instance.new("Frame")
Content.Size = UDim2.new(0.8,0,1,0)
Content.Position = UDim2.new(0.2,0,0,0)
Content.BackgroundColor3 = Color3.fromRGB(30,30,60)
Content.Parent = GuiFrame

-- Funktion Buttons
local SpeedBtn = Instance.new("TextButton")
SpeedBtn.Size = UDim2.new(0.5,0,0,50)
SpeedBtn.Position = UDim2.new(0.25,0,0.1,0)
SpeedBtn.Text = "‚ö° Speed x2"
SpeedBtn.TextScaled = true
SpeedBtn.Parent = Content

local FlyBtn = Instance.new("TextButton")
FlyBtn.Size = UDim2.new(0.5,0,0,50)
FlyBtn.Position = UDim2.new(0.25,0,0.25,0)
FlyBtn.Text = "üõ´ Fly: OFF"
FlyBtn.TextScaled = true
FlyBtn.Parent = Content

local FlySpeedUp = Instance.new("TextButton")
FlySpeedUp.Size = UDim2.new(0.4,0,0,40)
FlySpeedUp.Position = UDim2.new(0.05,0,0.4,0)
FlySpeedUp.Text = "‚ûï Fly Speed"
FlySpeedUp.TextScaled = true
FlySpeedUp.Parent = Content

local FlySpeedDown = Instance.new("TextButton")
FlySpeedDown.Size = UDim2.new(0.4,0,0,40)
FlySpeedDown.Position = UDim2.new(0.55,0,0.4,0)
FlySpeedDown.Text = "‚ûñ Fly Speed"
FlySpeedDown.TextScaled = true
FlySpeedDown.Parent = Content

-- Funktionen
local normalWalk = Humanoid.WalkSpeed
local flyEnabled = false
local flySpeed = 50
local flying = nil

-- Speed Button
SpeedBtn.MouseButton1Click:Connect(function()
    if Humanoid.WalkSpeed == normalWalk then
        Humanoid.WalkSpeed = normalWalk * 2
        SpeedBtn.Text = "‚ö° Speed Reset"
    else
        Humanoid.WalkSpeed = normalWalk
        SpeedBtn.Text = "‚ö° Speed x2"
    end
end)

-- Fly Funktion
local function FlyLoop()
    if flying then flying:Disconnect() end
    flying = game:GetService("RunService").RenderStepped:Connect(function()
        local hrp = Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            local move = Vector3.zero
            if UIS:IsKeyDown(Enum.KeyCode.W) then move = move + (workspace.CurrentCamera.CFrame.LookVector) end
            if UIS:IsKeyDown(Enum.KeyCode.S) then move = move - (workspace.CurrentCamera.CFrame.LookVector) end
            if UIS:IsKeyDown(Enum.KeyCode.A) then move = move - (workspace.CurrentCamera.CFrame.RightVector) end
            if UIS:IsKeyDown(Enum.KeyCode.D) then move = move + (workspace.CurrentCamera.CFrame.RightVector) end
            if UIS:IsKeyDown(Enum.KeyCode.Space) then move = move + Vector3.new(0,1,0) end
            if UIS:IsKeyDown(Enum.KeyCode.LeftControl) then move = move - Vector3.new(0,1,0) end
            hrp.Velocity = move * flySpeed
        end
    end)
end

FlyBtn.MouseButton1Click:Connect(function()
    flyEnabled = not flyEnabled
    if flyEnabled then
        FlyBtn.Text = "üõ´ Fly: ON"
        Humanoid.PlatformStand = true
        FlyLoop()
    else
        FlyBtn.Text = "üõ´ Fly: OFF"
        Humanoid.PlatformStand = false
        if flying then flying:Disconnect() end
        Character:FindFirstChild("HumanoidRootPart").Velocity = Vector3.zero
    end
end)

FlySpeedUp.MouseButton1Click:Connect(function()
    flySpeed = flySpeed + 10
    FlySpeedUp.Text = "‚ûï Fly Speed ("..flySpeed..")"
end)
FlySpeedDown.MouseButton1Click:Connect(function()
    flySpeed = math.max(10, flySpeed - 10)
    FlySpeedDown.Text = "‚ûñ Fly Speed ("..flySpeed..")"
end)

-- Nach 10 Sekunden Schildkr√∂ten l√∂schen & GUI anzeigen
task.delay(10, function()
    for _,v in pairs(TurtleFolder:GetChildren()) do v:Destroy() end
    GuiFrame.Visible = true
end)
